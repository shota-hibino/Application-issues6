<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book), class: "like", method: :delete, remote: true do %>
      ♥<%= book.favorites.count %></div>
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to book_favorites_path(book), class: "unlike", method: :post , remote: true do %>
      ♥<%= book.favorites.count %></div>
    <% end %>
  </p>
<% end %>